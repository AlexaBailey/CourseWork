
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/records">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">View Student</li>
  </ol>
</nav>


<div class="view-user p-5">
  {{#each rows}}
  <div class="row mb-5">
    <div class="col text-center">
      <h3>{{this.first_name}} {{this.last_name}}</h3>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Group</th>
            <th scope="col">Score</th>
            <th scope="col">Electives</th>
      

          </tr>
        </thead>
        <tbody>
          <tr>
      <th scope="row">{{this.first_name}}</th>
      <td>{{this.last_name}}</td>
      <td>{{this.group_name}}</td>
      <td>{{this.score}}</td>
      <td>{{this.el_name}}</td>
          </tr>
        </tbody>
      </table>
    </div>

  </div>
  {{/each}}
</div>
